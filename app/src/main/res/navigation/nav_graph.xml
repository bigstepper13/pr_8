<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.pr4.ui.fragments.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_recyclerFragment"
            app:destination="@id/recyclerFragment" />
        <action
            android:id="@+id/action_mainFragment_to_perfumeryFragment"
            app:destination="@id/perfumeryFragment" />
    </fragment>
    <fragment
        android:id="@+id/recyclerFragment"
        android:name="com.example.pr4.ui.fragments.RecyclerFragment"
        android:label="RecyclerFragment" />
    <fragment
        android:id="@+id/perfumeryFragment"
        android:name="com.example.pr4.ui.fragments.PerfumeryFragment"
        android:label="PerfumeryFragment" />
</navigation>